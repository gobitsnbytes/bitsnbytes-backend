// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ORGANIZER
  CORE_MEMBER
}

enum TaskCategory {
  EVENT_SETUP
  SPONSORSHIP
  TECH
  LOGISTICS
  GRAPHICS
  OUTREACH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  BLOCKED
  DONE
}

enum GraphicsAssetType {
  POSTER
  STORY
  BANNER
  STANDEE
}

enum GraphicsStatus {
  REQUESTED
  DESIGNING
  REVIEW
  APPROVED
  DELIVERED
}

enum OutreachChannel {
  INSTAGRAM
  WHATSAPP
  EMAIL
  PARTNER
}

enum OutreachStatus {
  PENDING
  SCHEDULED
  PUBLISHED
  FAILED
}

enum LogisticsStatus {
  NOT_READY
  READY
  ISSUE
}

enum NotificationType {
  SYSTEM
  HUMAN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownedTasks      Task[]         @relation("TaskOwner")
  notifications   Notification[]
  graphicsTasks   GraphicsTask[]
  outreachTasks   OutreachTask[]
  sponsorshipTasks SponsorshipTask[]
  logisticsTasks  LogisticsTask[]

  @@map("users")
}

model Event {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]

  @@map("events")
}

model Task {
  id          String       @id @default(cuid())
  eventId     String
  category    TaskCategory
  title       String
  ownerId     String
  deadline    DateTime
  status      TaskStatus
  blockerNote String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  event           Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  owner           User             @relation("TaskOwner", fields: [ownerId], references: [id])
  graphicsTask    GraphicsTask?
  outreachTask    OutreachTask?
  sponsorshipTask SponsorshipTask?
  logisticsTask   LogisticsTask?
  notifications   Notification[]

  @@map("tasks")
}

model GraphicsTask {
  id             String          @id @default(cuid())
  taskId         String          @unique
  ownerId        String
  assetType      GraphicsAssetType
  formats        Json            // Array of {format, dimensions}
  status         GraphicsStatus
  finalOutputLink String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  owner User  @relation(fields: [ownerId], references: [id])

  @@map("graphics_tasks")
}

model OutreachTask {
  id           String          @id @default(cuid())
  taskId       String          @unique
  ownerId      String
  channel      OutreachChannel
  contentLink  String?         // References GraphicsTask finalOutputLink
  scheduledTime DateTime?
  status       OutreachStatus
  outcomeNote  String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  owner User  @relation(fields: [ownerId], references: [id])

  @@map("outreach_tasks")
}

model SponsorshipTask {
  id              String   @id @default(cuid())
  taskId          String   @unique
  ownerId         String
  currentStage    String
  nextAction      String?
  followUpDeadline DateTime?
  statusHistory   Json     // Array of status changes
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  owner User  @relation(fields: [ownerId], references: [id])

  @@map("sponsorship_tasks")
}

model LogisticsTask {
  id        String          @id @default(cuid())
  taskId    String          @unique
  ownerId   String
  status    LogisticsStatus
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  owner User  @relation(fields: [ownerId], references: [id])

  @@map("logistics_tasks")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  message   String
  taskId    String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task?  @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@map("notifications")
}
